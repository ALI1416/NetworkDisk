<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ck.dao.FolderDao">

	<sql id="col">id,folderid,fileid
	</sql>

	<!-- 插入 -->
	<insert id="insert" parameterType="FolderVo" keyProperty="id"
		useGeneratedKeys="true">
		INSERT folder (
		folderid,fileid
		)VALUES(#{folderid},#{fileid})
	</insert>

	<!-- 查询通过id -->
	<select id="findById" parameterType="Integer"
		resultType="Folder">
		SELECT
		<include refid="col" />
		FROM
		folder
		WHERE
		id=#{id}
	</select>

	<!-- 更新 -->
	<update id="update" parameterType="FolderVo">
		UPDATE folder
		<set>
			<if test="folderid != null">
				folderid=#{folderid},
			</if>
			<if test="fileid != null">
				fileid=#{fileid},
			</if>
		</set>
		WHERE
		id=#{id}
	</update>

	<!-- 查询 -->
	<select id="find" parameterType="FolderVo" resultType="Folder">
		SELECT
		<include refid="col" />
		FROM
		folder
		<where>
			<if test="folderid != null">
				and folderid=#{folderid}
			</if>
			<if test="fileid != null">
				and fileid=#{fileid}
			</if>
		</where>
	</select>
</mapper>