<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ck.dao.UserInfoDao">

	<sql id="col">id,name,number,idcard,type
	</sql>

	<!-- 插入 -->
	<insert id="insert" parameterType="UserInfoVo" keyProperty="id"
		useGeneratedKeys="true">
		INSERT user_info (
		name,number,idcard,type
		)VALUES(#{name},#{number},#{idcard},#{type})
	</insert>

	<!-- 查询通过id -->
	<select id="findById" parameterType="Integer"
		resultType="UserInfo">
		SELECT
		<include refid="col" />
		FROM
		user_info
		WHERE
		id=#{id}
	</select>

	<!-- 更新 -->
	<update id="update" parameterType="UserInfoVo">
		UPDATE user_info
		<set>
			<if test="name != null and name != ''">
				name=#{name},
			</if>
			<if test="number != null and number != ''">
				number=#{number},
			</if>
			<if test="idcard != null and idcard != ''">
				idcard=#{idcard},
			</if>
			<if test="type != null">
				type=#{type},
			</if>
		</set>
		WHERE
		id=#{id}
	</update>

	<!-- 查询 -->
	<!-- 姓名、学号、身份证号码模糊查询，其他精确查询 -->
	<select id="find" parameterType="UserInfoVo"
		resultType="UserInfo">
		SELECT
		<include refid="col" />
		FROM
		user_info
		<where>
			<if test="name != null and name != ''">
				<bind name="name1" value="'%'+ name +'%'" />
				and name like #{name1}
			</if>
			<if test="number != null and number != ''">
				<bind name="number1" value="'%'+ number +'%'" />
				and number like #{number1}
			</if>
			<if test="idcard != null and idcard != ''">
				<bind name="idcard1" value="'%'+ idcard +'%'" />
				and idcard like #{idcard1}
			</if>
			<if test="type != null">
				and type=#{type}
			</if>
		</where>
	</select>

	<!-- 精确查询 -->
	<select id="findExact" parameterType="UserInfoVo"
		resultType="UserInfo">
		SELECT
		<include refid="col" />
		FROM
		user_info
		<where>
			<if test="name != null and name != ''">
				and name=#{name}
			</if>
			<if test="number != null and number != ''">
				and number=#{number}
			</if>
			<if test="idcard != null and idcard != ''">
				and idcard=#{idcard}
			</if>
			<if test="type != null">
				and type=#{type}
			</if>
		</where>
	</select>
</mapper>